@model DevelopersSurvey.Web.Models.FootballTeams.UpdateFootballTeamViewModel
@{
    ViewBag.Title = "Football Team";
}

@Html.ValidationSummary()
<h2>@ViewBag.Title.</h2>

@if (Model != null)
{
    using (Html.BeginForm("UpdateFootballTeam", "FootballTeam", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Update Team Data</h4>
        <hr />
        @Html.HiddenFor(m => m.ID)
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Stadium, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Stadium, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.YearFound, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.YearFound, new { @class = "form-control", @type = "number" })
            </div>
        </div>
        <div class="row pt-15">
            <div class="col-md-2">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
