@model FootballLeague.Web.Models.FootballTeams.FootballTeamsDataContextViewModel

<h1>Football Teams</h1>
@Html.ValidationSummary()

<div class="row">
    <div class="col-sm pb-15 pl-25">
        @Html.ActionLink("Add Football Team", "AddFootballTeam", "FootballTeam")
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        NAME
    </div>
    <div class="col-md-2">
        STADIUM
    </div>
    <div class="col-md-2">
        YEAR FOUND
    </div>
    <div class="col-md-2">
        POINTS
    </div>
    <div class="col-md-2">

    </div>
</div>

@foreach (var team in Model.Teams)
{
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink(@team.Name,
                             "UpdateFootballTeam",
                              new { teamId = team.ID })
        </div>
        <div class="col-md-2">
            @team.Stadium
        </div>
        <div class="col-md-2">
            @team.YearFound
        </div>
        <div class="col-md-3">
            @team.Points
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Delete",
                             "DeleteFootballTeam",
                              new { teamId = team.ID })
        </div>
    </div>
}

@section scripts {
    <script>

    </script>
}

